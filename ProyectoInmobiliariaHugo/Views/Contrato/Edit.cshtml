@model ProyectoInmobiliariaHugo.Models.Contrato

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <label>Direccion: @ViewBag.Inmueble</label>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IdContrato" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="IdInmueble" class="form-control" type="hidden" value="@ViewBag.IdInmueble" />
            </div>
            <div class="form-group">
                <label asp-for="IdInquilino" class="control-label">Inquilino: @ViewBag.InquilinoDescripcion</label>
                <input asp-for="IdInquilino" class="form-control" type="hidden" value="@ViewBag.IdInquilino"/>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" value="@ViewBag.FechaInicio"/>
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCierre" class="control-label"></label>
                <input asp-for="FechaCierre" class="form-control" value="@ViewBag.FechaCierre"/>
                <span asp-validation-for="FechaCierre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" value="@ViewBag.Monto"/>
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <p style="color:red">@ViewBag.error</p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listado">Volver al listado</a>
</div>

