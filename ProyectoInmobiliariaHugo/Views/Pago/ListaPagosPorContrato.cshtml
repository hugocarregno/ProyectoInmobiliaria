@model IEnumerable<ProyectoInmobiliariaHugo.Models.Pago>

@{
    ViewData["Title"] = "ListaPagosPorContrato";
}

<h1>Pagos Por Contrato</h1>
<h4>Lista de Pagos: @ViewBag.Inquilino</h4>

@if (Model.Count() == 0)
{
    <h3>No hay Pagos del contrato del Inquilino :@ViewBag.Inquilino </h3>
}
else {
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cuota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Inquilino
            </th>
            <th>
                Dirección
            </th>
            <th>
                Tipo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cuota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @(item.Contrato.Inquilino.Dni + " " + item.Contrato.Inquilino.Apellido + " " + item.Contrato.Inquilino.Nombre)
            </td>
            <td>
                @(item.Contrato.Inmueble.Direccion)
            </td>
            <td>
                @(item.Contrato.Inmueble.Tipo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdPago })
            </td>
        </tr>
        }
    </tbody>
</table>
}

