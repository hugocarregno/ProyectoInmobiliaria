@model ProyectoInmobiliariaHugo.Models.Pago

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pago de @ViewBag.InquilinoDescripcion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="IdPago" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Cuota" class="control-label">Cuota N° @ViewBag.Cuota</label>
                <input asp-for="Cuota" class="form-control" type="hidden" value="@Model.Cuota"/>
                <span asp-validation-for="Cuota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" value=@ViewBag.FechaPago />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" value="@Model.Importe"/>
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado">
                    @if (Model.Estado == "pagado")
                    {
                        <option value="pagado" selected>Pagado</option>
                        <option value="debe">Debe</option>
                    }
                    else
                    {
                        <option value="debe" selected>Debe</option>
                        <option value="pagado">Pagado</option>
                    }
                </select>
            </div>
                <input asp-for="IdContrato" class="form-control" type="hidden" value="@ViewBag.IdContrato" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <p style="color:red">@ViewBag.error</p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listado">Volver al listado</a>
</div>

