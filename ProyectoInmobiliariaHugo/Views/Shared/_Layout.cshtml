<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div>
        @if (User.IsInRole("Administrador"))
        {
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Inmobiliaria Hugo</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-4">
                        <li class="nav-item">
                            <a asp-action="Listado" asp-controller="Propietario">Propietarios</a>
                        </li>
                        <li class="nav-item ml-4">
                            <a asp-action="Listado" asp-controller="Inmueble">Inmuebles</a>
                        </li>
                        <li class="nav-item ml-4">
                            <a asp-action="Listado" asp-controller="Inquilino">Inquilinos</a>
                        </li>
                        <li class="nav-item ml-4">
                            <a asp-action="Listado" asp-controller="Contrato">Contratos</a>
                        </li>
                        <li class="nav-item ml-4">
                            <a asp-action="Listado" asp-controller="Pago">Pagos</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a asp-action="Logout" asp-controller="Home">Salir</a>
                        </li>
                    </ul>
                </div>
            </nav>

        }
        @if (User.IsInRole("Usuario"))
        {
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Inmobiliaria Hugo</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a asp-action="Logout" asp-controller="Home">Salir</a>
                        </li>
                    </ul>
                </div>
            </nav>
        }

        @RenderBody();
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script>
        function validar() {
            if (document.getElementById("Dni").value.length != 8) {
                alert("Dni debe contener 8 caracteres");
                return false;
            }
            return true;
        }
    </script>
    <footer class="text-center">
        Inmobiliaria Hugo 2019
    </footer>
</body>
</html>
